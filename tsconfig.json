{
    "compilerOptions": {
        "outDir":"js",
        "module": "esnext",
        "target": "es2015",
        "moduleResolution":"node",
        "lib":["esnext","dom"],
        "sourceMap":true,
        "allowJs":false,
        "jsx":"react",
        "rootDir":"app/src",
        "baseUrl":"app/src",
        "declaration":false,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "esModuleInterop":true,
        "alwaysStrict":true,
    },
      "exclude": [
        "node_modules"
      ],
      "include": [
        "app/src"
      ]
}